{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpecKit Tasks Schema (handoff gate)",
  "type": "object",
  "required": [
    "agent_execution_contract",
    "traceability_summary",
    "definition_of_ready",
    "tasks"
  ],
  "properties": {
    "agent_execution_contract": {
      "type": "object"
    },
    "traceability_summary": {
      "type": "object"
    },
    "definition_of_ready": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^- \\[[ X]\\] T\\d{3}\\s(\\[P\\d?\\]\\s)?\\[US-\\d{3}\\]\\s.+"
      }
    }
  }
}