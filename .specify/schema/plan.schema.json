{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpecKit Plan Schema (enforced sections)",
  "type": "object",
  "required": [
    "evidence_to_decision_map",
    "definition_of_ready",
    "component_map",
    "interaction_contracts"
  ],
  "properties": {
    "evidence_to_decision_map": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "decision",
          "rt_ids",
          "final_value",
          "date"
        ],
        "properties": {
          "decision": {
            "type": "string"
          },
          "rt_ids": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^RT-\\d+\\b"
            }
          },
          "sections_impacted": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "final_value": {
            "type": "string"
          },
          "date": {
            "type": "string"
          }
        }
      }
    },
    "definition_of_ready": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "component_map": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "interaction_contracts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}